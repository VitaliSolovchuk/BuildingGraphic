@model BuildingGraphic.Models.EquationDTO
<style>
    table {
        border-collapse: collapse;
    }

    tr {
    }

    td {
        border: 1px solid black;
        padding: 2px;
    }
</style>

    
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<h2>@ViewBag.Massange</h2>

@using (Ajax.BeginForm("Index", new AjaxOptions { UpdateTargetId = "graphic" }))
{
    
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>EquationDTO</h4>
    <hr />
    <table>
        <tr>
            <td>
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CoefficientZeroDegrees)
                        @Html.ValidationMessageFor(model => model.CoefficientZeroDegrees, "", new { @class = "text-danger" })
                    </div>
                </div>

            </td>

            <td>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CoefficientFirstDegrees, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CoefficientFirstDegrees, "", new { @class = "text-danger" })
                    </div>
                </div>

            </td>

            <td>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CoefficientSecondDegrees, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CoefficientSecondDegrees, "", new { @class = "text-danger" })
                    </div>
                </div>

            </td>
        </tr>

        <tr>
            <td>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StartPosition, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartPosition, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StopPosition, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StopPosition, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Step, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Step, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
    </table>







    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div id="graphic"></div>

